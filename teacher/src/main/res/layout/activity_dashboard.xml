<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/dashboardactivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".DashboardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/curved_rectangle"
                android:orientation="vertical">



            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutclass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/curved_rectangle"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_play_arrow_24"
                    android:fontFamily="casual"
                    android:text="Class"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/classroomlogo">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutscheduleclass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/curved_rectangle"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_play_arrow_24"
                    android:fontFamily="casual"

                    android:text="Schedule Class"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:textStyle="bold">
                </TextView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/contact_icon"></ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutattendancereport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/curved_rectangle"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_play_arrow_24"
                    android:fontFamily="casual"
                    android:text="Student Attendance Report"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:textStyle="bold">
                </TextView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/studentreport">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/curved_rectangle"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_play_arrow_24"
                    android:fontFamily="casual"
                    android:text="Calendar"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/calendar_icon"></ImageView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>

