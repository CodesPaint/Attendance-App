<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AdminLoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/manitlogo"
            android:layout_marginTop="20dp"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="casual"
            android:text="Attendance Tracker (Admin)"
            android:textColor="#FFFFFF"
            android:textSize="23dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etusername"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:drawableLeft="@drawable/ic_baseline_android_24"
            android:drawablePadding="5dp"
            android:hint="Username"
            android:padding="20dp"
            android:textColorHint="#DBE3D4" />

        <EditText
            android:id="@+id/etpasswrd"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_android_24"
            android:drawablePadding="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColorHint="#DBE3D4"></EditText>

        <Button
            android:id="@+id/btlogin"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:onClick="callLogin"
            android:text="Login"
            android:textColor="#32AAA6"
            android:textStyle="bold">

        </Button>

        <TextView
            android:id="@+id/tvforgotpassword"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Forgot Password"
            android:textColor="#FFFFFF">

        </TextView>
    </LinearLayout>
</LinearLayout>